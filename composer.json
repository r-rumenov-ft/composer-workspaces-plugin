{
    "name": "r-rumenov-ft/composer-workspaces-plugin-fork",
    "description": "Workspaces plugin for Composer - FT fork that updates the package to php v8",
    "type": "composer-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "tmdk",
            "email": "tobiasvandijk@gmail.com"
        },
	{
	    "name": "r-rumenov-ft",
	    "email": "rumen.rumenov@ft.com"
	}
    ],
    "require": {
        "composer-plugin-api": "^2.0",
        "ext-json": "*",
        "symfony/finder": "^4.2",
        "symfony/filesystem": "^4.2",
        "php": "^7.1|^8.0"
    },
    "autoload": {
        "psr-4": {
            "ComposerWorkspacesPlugin\\": "src/"
        }
    },
    "extra": {
        "class": "ComposerWorkspacesPlugin\\Plugin"
    },
    "require-dev": {
        "composer/composer": "^2.0"
    }
}
